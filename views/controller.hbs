<nav class="navbar navbar-dark bg-dark">
	<h1 class="navbar-brand">Suns Explorer Controller</h1>
	<h6 class="navbar-text" id="status"></h6>
</nav>
<div id="controller" class="container">

	<div class="mt-3">
		<h3>Activate Suns</h3>
		<button id="pause" class="btn btn-outline-secondary btn-lg btn-block">Pause</button>
		<button id="lights" class="btn btn-outline-secondary btn-lg btn-block">Lights</button>
		<button id="tell-me" class="btn btn-outline-secondary btn-lg btn-block">Tell Me</button>
		<button id="scatter" class="btn btn-outline-secondary btn-lg btn-block">Scatter</button>
		<div class="btn-group btn-block d-flex" role="group">
			<button id="deconstruct" class="btn btn-outline-secondary btn-lg w-100">Deconstruct</button>
			<button id="reconstruct" class="btn btn-outline-secondary btn-lg w-100">Reconstruct</button>
		</div>
		<div class="btn-group btn-block d-flex" role="group">
			<button id="slower" class="btn btn-outline-secondary btn-lg w-100">Slower</button>
			<button id="faster" class="btn btn-outline-secondary btn-lg w-100">Faster</button>
		</div>
		<button id="big-bang" class="btn btn-outline-secondary btn-lg btn-block">Big Bang</button>
		<button id="end-times" class="btn btn-outline-secondary btn-lg btn-block">End Times</button>
	</div>
	<div class="mt-3">
		<h3>Resize Suns</h3>
		<div class="btn-group btn-block d-flex" role="group">
			<button id="multiplier-1" class="btn btn-outline-secondary btn-lg w-100">S</button>
			<button id="multiplier-2" class="btn btn-outline-secondary btn-lg w-100">M</button>
			<button id="multiplier-3" class="btn btn-outline-secondary btn-lg w-100">L</button>
			<button id="multiplier-4" class="btn btn-outline-secondary btn-lg w-100">XL</button>
		</div>
	</div>
</div>
<footer class="footer">
	<div class="container"></div>
</footer>

<div id="end-times-message" class="controller-overlay-wrapper">
	<div class="controller-overlay-wrapper-inner">
		<div class="controller-message-container">
			<h1 id="overlay-message">So long, and thanks for all the fish.</h1>
		</div>
	</div>
</div>

<script type="text/javascript">
	var messages = [
		"So long, and thanks for all the fish.",
		"“By looking far out into space we are also looking far back into time, back toward the horizon of the universe, back toward the epoch of the Big Bang.”  ―Carl Sagan, Cosmos"
	];

    var socket = io('/controller-namespace');

    socket.on("screens up", function(data) {
    	setScreenStatus(data);
    });

    socket.on("tell-me state", function(data) {
    	$("#tell-me").text(data ? "Tell Me Not" : "Tell Me");
    });

    socket.on("end-times started", function(data) {
		$("#overlay-message").text(messages[0]);

    	$("#end-times-message")
			.css("display", "table")
			.fadeTo(750, 1.0);
    });

    socket.on("end-times ended", function(data) {
    	$("#end-times-message")
			.fadeTo(750, 0.0, function() {$(this).hide()})
    });

    socket.on("big-bang started", function(data) {
		$("#overlay-message").text(messages[1]);

    	$("#end-times-message")
			.css("display", "table")
			.fadeTo(750, 1.0);
    });

    socket.on("big-bang ended", function(data) {
    	$("#end-times-message")
			.fadeTo(750, 0.0, function() {$(this).hide()})
    });

	$("#pause").click(function() {
		socket.emit("pause clicked")
	});

	$("#tell-me").click(function() {
		socket.emit("tell-me clicked")
	});

	$("#lights").click(function() {
		socket.emit("lights clicked")
	});

	$("#reconstruct").click(function() {
		socket.emit("reconstruct clicked")
	});

	$("#deconstruct").click(function() {
		socket.emit("deconstruct clicked")
	});

	$("#slower").click(function() {
		socket.emit("slower clicked")
	});

	$("#faster").click(function() {
		socket.emit("faster clicked")
	});

	$("#scatter").click(function() {
		socket.emit("scatter clicked")
	});

	$("#big-bang").click(function() {
		socket.emit("big-bang clicked")
	});

	$("#eclipse").click(function() {
		socket.emit("eclipse clicked")
	});

	$("#end-times").click(function() {
		socket.emit("end-times clicked")
	});

	$("#multiplier-1").click(function() {
		socket.emit("multiplier clicked", 1);
	});
	$("#multiplier-2").click(function() {
		socket.emit("multiplier clicked", 2);
	});
	$("#multiplier-3").click(function() {
		socket.emit("multiplier clicked", 3);
	});
	$("#multiplier-4").click(function() {
		socket.emit("multiplier clicked", 4);
	});

    function setScreenStatus(status) {
    	$("#status").text(status ? "Screens are on" : "Screen are off");
    }
</script>
