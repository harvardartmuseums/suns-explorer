<nav class="navbar navbar-inverse bg-inverse">
	<h1 class="navbar-brand">Suns Explorer Controller</h1>
	<h6 class="navbar-text" id="status"></h6>
</nav>
<div id="controller" class="container">

	<div class="mt-3">
		<h2>Activate Suns</h2>
		<button id="pause" class="btn btn-secondary btn-lg btn-block">Pause</button>
		<button id="lights" class="btn btn-secondary btn-lg btn-block">Lights</button>
		<button id="scatter" class="btn btn-secondary btn-lg btn-block">Scatter</button>
	</div>
	<div class="mt-3">
		<h2>Resize Suns</h2>
		<button id="multiplier-1" class="btn btn-secondary btn-lg btn-block">Small</button>
		<button id="multiplier-2" class="btn btn-secondary btn-lg btn-block">Medium</button>
		<button id="multiplier-3" class="btn btn-secondary btn-lg btn-block">Large</button>
		<button id="multiplier-4" class="btn btn-secondary btn-lg btn-block">Extra Large</button>
	</div>
</div>
<footer class="footer">
	<div class="container">
		<span id="status"></span>
	</div>
</footer>

<script type="text/javascript">

    var socket = io('/controller-namespace');

    socket.on("screens up", function(data) {
    	setScreenStatus(data);
    });

	$("#pause").click(function() {
		socket.emit("pause clicked")
	});

	$("#lights").click(function() {
		socket.emit("lights clicked")
	});

	$("#scatter").click(function() {
		socket.emit("scatter clicked")
	});

	$("#multiplier-1").click(function() {
		socket.emit("multiplier clicked", 1);
	});
	$("#multiplier-2").click(function() {
		socket.emit("multiplier clicked", 2);
	});
	$("#multiplier-3").click(function() {
		socket.emit("multiplier clicked", 3);
	});
	$("#multiplier-4").click(function() {
		socket.emit("multiplier clicked", 4);
	});

    function setScreenStatus(status) {
    	$("#status").text(status ? "Screens are on" : "Screen are off");
    }
</script>
